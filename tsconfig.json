{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es6",
        "noImplicitAny": false,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": "src",
        "paths": {
            "*": [
                "node_modules/*",
                "types/*"
            ]
        },
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"plugins": [
      		{ "name": "tslint-language-service"}
    	]
	},
 	"include": [
		"src/**/*"
	],
	"exclude": [
		"test/**/*"
	]
}